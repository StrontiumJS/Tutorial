{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",

    "alwaysStrict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "lib": [
      "es6",
      "es2015"
    ],

    "typeRoots": [
      "./node_modules/@types"
    ],

    "types": [
      "node"
    ]

  },

  "compileOnSave": true,

  "include": [
    "src/**/*.ts"
  ]
}